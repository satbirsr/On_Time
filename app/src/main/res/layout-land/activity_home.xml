<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Home"
    android:background="@drawable/background_home"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <TextView
        android:id="@+id/theTime"
        android:text="@string/default_time"
        android:textColor="#ffffff"
        android:textSize="100sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/theMarker"
        android:text="@string/default_marker"
        android:textColor="#88ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/theTime" android:layout_toEndOf="@id/theTime"
        android:layout_alignTop="@+id/theTime"
        android:paddingLeft="10sp" android:paddingStart="10sp"
        android:paddingTop="20sp"
        />

    <TextView
        android:id="@+id/theSec"
        android:text="@string/default_sec"
        android:textColor="#88ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/theMarker" android:layout_alignEnd="@id/theMarker"
        android:layout_alignBaseline="@+id/theTime"
        android:paddingLeft="10sp" android:paddingStart="10sp"
        />

    <TextView
        android:id="@+id/theDate"
        android:text="@string/default_date"
        android:textColor="#88ffffff"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/theMarker" android:layout_alignEnd="@id/theMarker"
        android:layout_below="@+id/theTime"
        />

    <Button
        android:id="@+id/goToAddAlarmButton"
        android:text="@string/button_addAlarm"
        android:background="@drawable/background_button"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:drawableLeft="@drawable/ic_alarm"
        android:drawableStart="@drawable/ic_alarm"
        android:drawablePadding="10sp"
        android:paddingLeft="10sp"
        android:paddingStart="10sp"
        android:paddingRight="20sp"
        android:paddingEnd="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <!--<TextView android:text="@string/whats_up" android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

</RelativeLayout>
